{
    "extends": [
        "tslint:latest",
        "tslint-eslint-rules",
        "tslint-react"   
    ],
    "rules": {
        "max-line-length": {
            "options": [120]
        },
        "quotemark": [true, "single", "jsx-double"],
        "jsx-no-multiline-js": false,
        "jsx-no-lambda": false,
        "object-literal-sort-keys": false,
        "no-bitwise": false,
        "no-var-requires": false
    },
    "jsRules": {
        "max-line-length": {
            "options": [120]
        },
        "quotemark": [true, "single", "jsx-double"]
    }
}