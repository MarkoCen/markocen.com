                label HTML5
            div.col-sm-10
                div.progress.active
                    div(class="progress-bar" style="width: 85%;background-color:#E84C3D;")
        div.col-sm-12
            div.col-sm-2
                label CSS3
            div.col-sm-10
                div.progress.active
                    div(class="progress-bar" style="width: 85%;background-color:#33A9DC;")
        div.col-sm-12
            div.col-sm-2
